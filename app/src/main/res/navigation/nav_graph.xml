<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.musicplayermobileapplication.ui.fragments.LoginSignUpFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/loginToContainer"
            app:destination="@id/containerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/containerFragment"
        android:name="com.example.musicplayermobileapplication.ui.fragments.ContainerFragment"
        android:label="ContainerFragment" >
        <action
            android:id="@+id/containerToLogin"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/containerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/containerToSong"
            app:destination="@id/individualSongFragment" />
        <action
            android:id="@+id/containerToLibrary"
            app:destination="@id/libraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/individualSongFragment"
        android:name="com.example.musicplayermobileapplication.ui.fragments.OneSongFragment"
        android:label="IndividualSongFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.musicplayermobileapplication.ui.fragments.LibraryFragment"
        android:label="LibraryFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>