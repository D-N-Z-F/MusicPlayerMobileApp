<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.musicplayermobileapplication.ui.viewmodels.LoginSignUpViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_gradient_bg1"
        tools:context=".ui.fragments.LoginSignUpFragment">

        <TextView
            android:id="@+id/tvMusicPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="80dp"
            android:fontFamily="@font/extrabold_poppins"
            android:gravity="center"
            android:text="Music Player"
            android:textColor="@color/white"
            android:textSize="65sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMusicPlayer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green"
            android:elevation="4dp"
            android:fontFamily="@font/bold_chakrapetch"
            android:text="Sign Up For Free"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationZ="6dp"
            app:cornerRadius="20dp"/>

        <TextView
            android:id="@+id/tvLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mbSignUp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bold_chakrapetch"
            android:shadowColor="@color/white"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="10"
            android:text="Log In"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvMusicPlayer"
            android:visibility="invisible">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:background="@drawable/input_box"
                android:hint="Username"
                android:autofillHints="username"
                android:inputType="text"
                android:text="@={viewModel.username}"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/input_box"
                android:hint="Password"
                android:autofillHints="username"
                android:inputType="textPassword"
                android:text="@={viewModel.password}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:prompt="@string/select_gender"
                    android:entries="@array/genders"
                    android:background="@color/white" />

                <NumberPicker
                    android:id="@+id/npAge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:background="@color/white"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:backgroundTint="@color/green"
                android:elevation="4dp"
                android:fontFamily="@font/bold_chakrapetch"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:translationZ="6dp"
                app:cornerRadius="20dp"/>

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold_chakrapetch"
                android:shadowColor="@color/white"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="10"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>

</layout>