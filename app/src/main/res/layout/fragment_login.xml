<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_gradient_bg1"
        tools:context=".ui.LoginFragment">

        <TextView
            android:id="@+id/tvMusicPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="80dp"
            android:fontFamily="@font/extrabold_poppins"
            android:gravity="center"
            android:text="Music Player"
            android:textColor="@color/white"
            android:textSize="65sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMusicPlayer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green"
            android:elevation="4dp"
            android:fontFamily="@font/bold_chakrapetch"
            android:text="Sign Up For Free"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationZ="6dp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/tvLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mbSignUp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bold_chakrapetch"
            android:shadowColor="@color/white"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="10"
            android:text="Log In"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>