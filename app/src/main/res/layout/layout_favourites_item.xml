<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivSongPic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/yoasobi" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivSongPic"
                android:layout_centerInParent="true"
                android:fontFamily="@font/semibold_poppins"
                android:text="Idol"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/tvSongSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSongTitle"
                android:layout_centerInParent="true"
                android:fontFamily="@font/light_poppins"
                android:text="Yoasobi"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>
    </LinearLayout>
</layout>