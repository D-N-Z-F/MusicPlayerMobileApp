<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlSong"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivSongPic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="6dp"
            android:src="@drawable/yoasobi"
            android:contentDescription="@string/image" />

        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivSongPic"
            android:fontFamily="@font/semibold_poppins"
            android:text="@string/title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSongArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvSongTitle"
            android:fontFamily="@font/light_poppins"
            android:text="@string/artist"
            android:textColor="@color/dark_grey"
            android:textSize="11sp" />

    </RelativeLayout>

</layout>